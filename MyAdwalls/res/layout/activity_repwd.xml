<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:background="@drawable/background_register"
	android:orientation="vertical" >

	<LinearLayout android:id="@+id/repwdlayout1"
	              android:layout_marginTop="60dp"
	              android:layout_marginBottom="20dp"
		          android:layout_width="fill_parent" 
		          android:layout_height="wrap_content">
	     <TextView android:id="@+id/textview1" 
		           android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
		           android:gravity="center"
		         
			       android:text="修改密码"  
			       android:textSize="30sp" />
	</LinearLayout>
	
	
	<LinearLayout android:id="@+id/layout3"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal" 
		          android:layout_marginTop="30dp"
		          android:gravity="center">
		
		<TextView android:id="@+id/repuser"
		          android:layout_width="90dp"
		          
			      android:layout_height="wrap_content" 
			      android:textSize="16sp"
			      android:text="用户名:" />
		
		<EditText android:id="@+id/repwduser" 
		          android:inputType="none"
		          android:layout_width="150dp"
			      android:layout_height="wrap_content" 
			      
			       />
	</LinearLayout>
	

		<LinearLayout android:id="@+id/repwdlayout51"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		           android:layout_marginTop="30dp"
		          android:gravity="center">
		
		<TextView android:id="@+id/repwdpwd2"
		          android:layout_width="90dp"
		          
			      android:layout_height="wrap_content" 
			      android:textSize="14sp"
			      android:text="新密码：" />
		
		<EditText android:id="@+id/newpwd1"
		          android:layout_width="150dp"
		          android:inputType="textPassword"
			      android:layout_height="wrap_content"
			     
			       />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/repwdlayout5"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		           android:layout_marginTop="30dp"
		          android:gravity="center">
		
		<TextView android:id="@+id/repwdpwd2"
		          android:layout_width="90dp"
		          
			      android:layout_height="wrap_content" 
			      android:textSize="14sp"
			      android:text="重复密码：" />
		
		<EditText android:id="@+id/repwdpassword2"
		          android:layout_width="150dp"
		          android:inputType="textPassword"
			      android:layout_height="wrap_content"
			     
			       />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/repwdlayout6"
		          android:layout_width="fill_parent" 
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		          android:layout_marginTop="40dp"
		          >
		<Button   android:id="@+id/repwdreset" 
		          android:layout_width="80dp"
			      android:layout_height="wrap_content"
			      android:layout_marginLeft="50dp"
			      android:background="@drawable/register_button_background"
			      android:text="重置" />
		<Button   android:id="@+id/repwdupdate"
		          android:layout_width="80dp"
			      android:layout_height="wrap_content"
			      android:layout_marginLeft="60dp" 
			      android:background="@drawable/register_button_background"
			      android:text="修改" />
	</LinearLayout>
</LinearLayout>