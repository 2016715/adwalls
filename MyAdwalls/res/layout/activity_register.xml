<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:background="@drawable/background_repwd"
	android:orientation="vertical" >

	<LinearLayout android:id="@+id/layout1"
	              android:layout_marginTop="40dp"
	              android:layout_marginBottom="20dp"
		          android:layout_width="fill_parent" 
		          android:layout_height="wrap_content">
	     <TextView android:id="@+id/textview1" 
		           android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
		           android:gravity="center"
		      
			       android:text="用户注册"  
			       android:textSize="30sp" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/relogin"
		          android:layout_height="wrap_content" 
		          android:layout_width="fill_parent"
		          android:layout_marginTop="20dp"
		          android:gravity="center">
		<TextView android:id="@+id/rete1"
		          android:text="姓名："
			      android:layout_width="90dp"
			     
			      android:layout_height="wrap_content" />
		<EditText android:id="@+id/rename"
		          android:inputType="none"
		          android:layout_width="150dp"
		        
			      android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:id="@+id/layout2"
		          android:layout_height="wrap_content" 
		          android:layout_width="fill_parent"
		          android:layout_marginTop="20dp"
		          android:gravity="center">
		<TextView android:id="@+id/user"
		          android:text="用户名："
			      android:layout_width="90dp"
			      
			      android:layout_height="wrap_content" />
		<EditText android:id="@+id/username"
		          android:layout_width="150dp"
		          
			      android:layout_height="wrap_content" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/layout3"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal" 
		           android:layout_marginTop="20dp"
		          android:gravity="center">
		
		<TextView android:id="@+id/pwd1"
		          android:layout_width="90dp"
		         
			      android:layout_height="wrap_content" 
			       
			      android:text="密     码:" />
		
		<EditText android:id="@+id/password1" 
		          android:layout_width="150dp"
			      android:layout_height="wrap_content" 
			   
			      android:password="true" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/layout4"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		           android:layout_marginTop="20dp"
		          android:gravity="center">
		
		<TextView android:id="@+id/pwd2"
		          android:layout_width="90dp"
		         
			      android:layout_height="wrap_content" 
			      
			      android:text="重复密码：" />
		
		<EditText android:id="@+id/password2"
		          android:layout_width="150dp"
			      android:layout_height="wrap_content"
			      
			      android:password="true" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/layout5"
		          android:layout_width="fill_parent" 
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		          android:layout_marginTop="40dp"
		          >
		<Button   android:id="@+id/reset" 
		          android:layout_width="80dp"
			      android:layout_height="wrap_content"
			      android:layout_marginLeft="50dp"
			      android:background="@drawable/register_button_background"
			      android:text="重置" />
		<Button   android:id="@+id/register"
		          android:layout_width="80dp"
			      android:layout_height="wrap_content"
			      android:layout_marginLeft="60dp" 
			      android:background="@drawable/register_button_background"
			      android:text="注册" />
	</LinearLayout>
</LinearLayout>